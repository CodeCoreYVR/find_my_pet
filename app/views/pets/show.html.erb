<div class="container">

  <h1 class="text-center">Show Page</h1>


<div class="row">


  <section class="col-md-4 tbn">
    <% if @pet.image.present?%>
      <% @pet.image.each do |i| %>
        <%= image_tag i.url(:large) , class: 'thumbnail'%>
      <%end%>
    <%end%>

  </section>
  <div class="col-md-8">
    <div class="panel-panel">
      <div class="row">
        <div class="col-md-8">
          <h2 style="margin-top:0"><%= @pet.name %></h2>
        </div>


        <div class="col-md-4 text-right">
          <%=link_to edit_pet_path(@pet), class:'btn btn-default' do%>
            <span class="glyphicon glyphicon-pencil "></span>
          <%end%>
          <%=link_to pet_path(@pet), class:'btn btn-default', method: :delete do %>
            <span class="glyphicon glyphicon-trash"></span>
          <%end%>
        </div>
      </div>
      <div class="hr"></div>

      <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>

            <th>Type:</th>
            <th><%= @pet.pet_type %></th>
          </tr>
        </thead>
        <tbody>
          <tr>

            <td>Size:</td>
            <td><%= @pet.size %></td>
          </tr>
          <tr>
            <td>Breed:</td>
            <td><%= @pet.breed %></td>
          </tr>

          <tr>
            <td>Color:</td>
            <td><%= @pet.color %></td>
          </tr>


          <tr>
            <td>Gender:</td>
            <td><%= @pet.gender %></td>
          </tr>

          <tr>
            <td>Age:</td>
            <td><%= @pet.age %></td>
          </tr>

        </tbody>
      </table>




    <div class="col-md-6">
      <p><span> last seen :</span><%= @pet.last_seen_at %></p>
      <p><%= @pet.last_seen_date.strftime('%b %d %Y') %>
      <%= @pet.last_seen_time.strftime('%I:%M %p') %></p>
      <p><%= @pet.note %></p>
      <div>
        <p class="btn btn-default">Found Your pet?</p>
        <p><%#= @pet.found %></p>
      </div>

    </div>


    <div class="col-md-6">
      <div class="col-md-12">
        <div id="message-form">
          <%= render '/messages/form' %>
        </div>
        <div id="messages">
          <% @pet.messages.each do |message| %>
            <%= render('/messages/message', {message: message}) %>
          <%end%>
        </div>
      </div>

    </div>







    </div>
  </div>

</div>
</div>
