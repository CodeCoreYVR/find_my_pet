
<div class="row form-sighting ">
    <div class="col-md-6">
      <div class="form-title">
      <h1>Report a Sighting</h1>
      </div>
      <%= simple_form_for @sighting do |f| %>
         <%= f.input :pet_type, collection: @pet_type %>
         <%= f.hidden_field :pet_id %>
         <br>
         <%= f.file_field :image %>
         <%=f.input :note %>
         <%=f.input :last_seen_at %>
       <div class="form-inline">
         <%=f.input :date_time, as: :date, order: [:day, :month, :year] %>
       </div>
         <h2>Your Contact Info (Optional)</h2>
          <%= f.input :name %>
          <%= f.input :contact %>
       <%= f.submit btn_label %>
      <% end %>
      </div>
      <div class="col-md-6 map">
      <div style='width: 500px;'>
        <input id="pac-input" class="controls" type="text" placeholder="Search Box">
        <div id="map" style='width: 500px; height: 700px;'></div>
      </div>
    </div>
  </div>
</div>
