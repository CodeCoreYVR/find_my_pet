<h1>Create a New sighting</h1>
<%= @sighting.errors.full_messages.join(', ') %>
<%= form_for @sighting do |f| %>
<h2>Pet description</h2>
 <div>
   <%= f.label :pet_type %>
   <%= f.select :pet_type, @pet_type %>
 </div>
 <div>
   <%= f.label :last_seen_at %>
    <%= f.text_field :last_seen_at %>
 </div>
 <div>
   <%= f.label :date_time %>
    <%= f.text_field :date_time %>
 </div>
 <div>
   <%= f.label :note %>
    <%= f.text_field :note %>
 </div>
 <div>
   <%= f.label :image %>
    <%= f.text_field :image %>
 </div>

 <h2>Your Contact Info</h2>
 <div>
   <%= f.label :name %>
    <%= f.text_field :name %>
 </div>
 <div>
   <%= f.label :contact %>
    <%= f.text_field :contact %>
 </div>
 <%= f.submit %>
<% end %>
