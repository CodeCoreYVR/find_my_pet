
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 sighting-form">
      <div class="form-title">
        <h2>Create a New Sighting</h2>
      </div>
      <hr>
      <%= @sighting.errors.full_messages.join(', ') %>
      <%= form_for @sighting do |f| %>
      <div class="form-content">
        <div class="pet-description">
          <h4>Pet description</h4>
           <div>
             <%= f.label :pet_type %>
             <%= f.select :pet_type, @pet_type %>
           </div>
           <div>
             <%= f.label :last_seen_at %>
              <%= f.text_field :last_seen_at %>
           </div>
           <div>
             <%= f.label :date_time %>
              <%= f.text_field :date_time %>
           </div>
           <div>
             <%= f.label :note %>
              <%= f.text_area :note %>
           </div>

           <div>
             <%= f.file_field :image %>
           </div>
        </div>
        <div class="contact-info">
           <h4>Your Contact Info (Optional)</h4>
           <div>
             <%= f.label :name %>
              <%= f.text_field :name %>
           </div>
           <div>
             <%= f.label :contact %>
              <%= f.text_field :contact %>
           </div>
           <%= f.submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<h1>Report Sighting</h1>

<% if @sighting.pet_id.present? %>
  <h2><%= @sighting.pet.name %></h2>
  <% if @sighting.pet.image.present? %>
    <%= image_tag @sighting.pet.image.first.url, class: 'question-thumbnail' %>
  <%end %>
<%end %>

<%= render 'form', {btn_label: 'Submit'} %>
